{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{% if section.settings.text_center == true %}
    <div class="text-center">
  {% else %}
    <div>
{% endif %}

  {%- if section.settings.heading != blank -%}
    <{{ section.settings.heading_type }}>
      {{ section.settings.heading | escape }}
    </{{ section.settings.heading_type }}>
  {%- endif -%}
  {%- if section.settings.text != blank -%}
    {{ section.settings.text }}
  {%- endif -%}

</div>

{% schema %}
{
  "name": "Rich text",
  "tag": "section",
  "class": "rich-text",
  "settings": [
    {
      "id": "heading",
      "type": "text",
      "label": "Heading",
      "default": "Add a heading",
      "info": "Optional"
    },
    {
      "type": "select",
      "id": "heading_type",
      "label": "Choose heading type",
      "info": "Important for SEO. If position is top of the page, choose heading 1. If position is further down the page, choose heading 2 or 3",
      "default": "h2",
      "options": [
        {
          "value": "h1",
          "label": "Heading 1"
        },
        {
          "value": "h2",
          "label": "Heading 2"
        },
        {
          "value": "h3",
          "label": "Heading 3"
        }
      ]
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Add text.</p>",
      "info": "Optional"
    },
    {
      "type": "checkbox",
      "id": "text_center",
      "label": "Center text",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Rich text"
    }
  ]
}
{% endschema %}
