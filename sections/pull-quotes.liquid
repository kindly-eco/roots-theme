{{ 'section-pull-quotes.css' | asset_url | stylesheet_tag }}

{% if section.settings.heading != blank %}
  <h2 id="{{ section.settings.heading | handleize }}">{{ section.settings.heading | escape }}</h2>
{% endif %}
<div>
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      <blockquote>
        <p>{{ block.settings.quote }}</p>
        <cite>â€”&nbsp;
          {{ block.settings.name | escape }}
        </cite>
      </blockquote>
    {% endfor %}
  {% else %}
    <p>No blocks</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Pull quotes",
  "tag": "section",
  "class": "pull-quotes",
  "max_blocks": 3,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Add a heading",
      "info": "Optional"
    }
  ],
  "blocks": [
    {
      "type": "pull_quote",
      "name": "Pull quote",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "Add a quote"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Add a name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Pull quotes",
      "blocks": [
        {
          "type": "pull_quote"
        },
        {
          "type": "pull_quote"
        }
      ]
    }
  ]
}
{% endschema %}
