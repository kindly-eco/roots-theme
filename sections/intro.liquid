{{ 'section-intro.css' | asset_url | stylesheet_tag }}

<div class="{{ section.settings.image_position }}{% if section.settings.image != blank %} has-image{% endif %}">

<div>
  {%- if section.settings.heading != blank -%}
    <{{ section.settings.heading_type }}>
      {%- if section.settings.sub_heading != blank -%}
        <span>{{ section.settings.sub_heading | escape }}</span>
      {%- endif -%}
      {{ section.settings.heading | escape }}
    </{{ section.settings.heading_type }}>
  {%- endif -%}
  {%- if section.settings.text != blank -%}
    <p class="lede">{{ section.settings.text | escape }}</p>
  {%- endif -%}
</div>

{% if section.settings.image != blank %}
  <img
    alt="{{ section.settings.image.alt | escape }}"
    height="{{ section.settings.image.height }}"
    loading="lazy"
    src="{{ section.settings.image | image_url: width: 1200 }}"
    width="{{ section.settings.image.width }}"
  />
{% endif %}

</div>

{% schema %}
{
  "name": "Intro",
  "tag": "section",
  "class": "intro",
  "settings": [
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub heading",
      "default": "Sub heading",
      "info": "Optional"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Add a heading"
    },
    {
      "type": "select",
      "id": "heading_type",
      "label": "Choose heading type",
      "info": "Important for SEO. If banner position is top of the page, choose heading 1. If position is further down the page, choose heading 2 or 3",
      "default": "h2",
      "options": [
        {
          "value": "h1",
          "label": "Heading 1"
        },
        {
          "value": "h2",
          "label": "Heading 2"
        },
        {
          "value": "h3",
          "label": "Heading 3"
        }
      ]
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "900 x 600 dimensions"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "default": "image-left",
      "options": [
        {
          "value": "image-left",
          "label": "Left"
        },
        {
          "value": "image-right",
          "label": "Right"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Intro"
    }
  ]
}
{% endschema %}
