{{ 'section-call-outs.css' | asset_url | stylesheet_tag }}

<div>
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      <div>
        {% if block.settings.image != blank %}
          <img
            alt="{{ block.settings.image.alt }}"
            height="{{ block.settings.image.height | divided_by: 2 }}"
            loading="lazy"
            src="{{ block.settings.image | image_url: width: 300, height: 300 }}"
            width="{{ block.settings.image.width | divided_by: 2 }}"
            />
        {% else %}
          {{ 'image' | placeholder_svg_tag }}
        {% endif %}
        <h3>{{ block.settings.heading | escape }}</h3>
        <p>{{ block.settings.text | escape }}</p>
      </div>
    {% endfor %}
  {% else %}
    <p>No blocks</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Call-outs",
  "tag": "section",
  "class": "call-outs",
  "max_blocks": 4,
  "blocks": [
    {
      "type": "callout",
      "name": "Call-out",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon",
          "info": "300 x 300 dimensions"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Add a heading"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Add text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Call-outs",
      "blocks": [
        {
          "type": "callout"
        },
        {
          "type": "callout"
        },
        {
          "type": "callout"
        },
        {
          "type": "callout"
        }
      ]
    }
  ]
}
{% endschema %}
