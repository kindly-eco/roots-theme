{{ 'section-people.css' | asset_url | stylesheet_tag }}

<h2>{{ section.settings.heading | escape }}</h2>
<div>
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      <article>
        {% if block.settings.image != blank %}
          <img
            alt="{{ block.settings.image.alt }}"
            height="{{ block.settings.image.height }}"
            loading="lazy"
            src="{{ block.settings.image | image_url: width: 400 }}"
            width="{{ block.settings.image.width }}"
            class="{{ block.settings.image_border_radius }}"
            />
        {% endif %}
        <h3>{{ block.settings.name | escape }}</h3>
        <p>{{ block.settings.role | escape }}</p>
        <div>{{ block.settings.biography }}</div>
      </article>
    {% endfor %}
  {% else %}
    <p>No blocks</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "People",
  "tag": "section",
  "class": "people",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Add a heading"
    }
  ],
  "blocks": [
    {
      "type": "person",
      "name": "Person",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Headshot",
          "info": "Optional 400 x 400 dimensions"
        },
        {
          "type": "select",
          "id": "image_border_radius",
          "label": "Headshot style",
          "default": "square",
          "options": [
            {
              "value": "square",
              "label": "Square"
            },
            {
              "value": "round",
              "label": "Round"
            }
          ]
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Add a name"
        },
        {
          "type": "text",
          "id": "role",
          "label": "Role",
          "default": "Add a role"
        },
        {
          "type": "richtext",
          "id": "biography",
          "label": "Biography",
          "default": "<p>Add a biography.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "People",
      "blocks": [
        {
          "type": "person"
        },
        {
          "type": "person"
        }
      ]
    }
  ]
}
{% endschema %}
